
@{
    ViewBag.Title = "Login Type...";
}

<h2>Choose your Login Type</h2>

 @using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="col-md-10">
        @Html.DropDownList("Rolename", new List<SelectListItem>
            {
            new SelectListItem{ Text="Admin", Value = "1" },
            new SelectListItem{ Text="Employee", Value = "2" },
            new SelectListItem{ Text="Customer", Value = "3" } })
    </div><div><button type="submit">Submit</button></div>
    <h1>@TempData["roleId"]</h1>
}